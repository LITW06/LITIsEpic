@using LITIsEpic.Data
@model LITIsEpic.Web.Models.HomePageViewModel
<div class="jumbotron">
    <div style="text-align: center;">
        <h2>Welcome to the LIT-W06 final day website! Yes, this is dumb 🤣</h2>
        <img class="meme" src="/images/meme.jpg" />
        <br />
        <br />
        <h3 style="display: inline;">Click the image above</h3>
        <img src="/images/point-up.png" width="150" />
    </div>
</div>
<div class="well">
    <div style="text-align: center;">
        <h2>Most Frequent Visitor IPs</h2>
        <table class="table table-bordered">
            <tr>
                <th>IP Address</th>
                <th>Visit Count</th>
            </tr>
            @foreach (VisitCounts visit in Model.FiveMostFrequentIPs)
            {
                <tr class="success">
                    <td>@visit.IpAddress</td>
                    <td>@visit.Count</td>
                </tr>
            }
        </table>
        <h2>Total Vists for Today (@DateTime.Today.ToShortDateString()): @Model.TodayCount </h2>
        <h2>Most popular IP: @Model.MostPopularIP</h2>
    </div>
</div>
@section scripts
{
    <script src="/lib/jquery.jrumble.1.3.min.js"></script>
    <script src="/js/index.js"></script>
}
